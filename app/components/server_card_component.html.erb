<div
  class="max-w-md rounded-lg bg-gray-100 shadow mt-3 p-4"
  style="
    height: fit-content;
"
>
  <h3 class="text-xl font-medium text-gray-900"><%= server.name %></h3>
  <div class="flex flex-row mt-4">
    <div class="w-3/4 flex gap-1">
      <%= server.status_label %>
      <span
        class="rounded-md px-3 py-1 text-sm font-semibold"
        x-data="{ tooltip: '<%= t('views.dashboard.server.online_players') %>' }"
        x-tooltip="tooltip"
      >
        0 / 300
      </span>
    </div>
    <div class="w-1/4 flex gap-1 justify-end">
      <div class="float-right" x-data="{ tooltip: '<%= t('views.dashboard.server.details') %>' }">
        <%= link_to(icon('fa-solid', 'chevron-right'), dashboard_home_index_path, class: "#{button_classes.render(size: :sm, style: :secondary)} text-xs", 'x-tooltip'=>"tooltip") %>
      </div>
    </div>
  </div>
</div>

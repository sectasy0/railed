{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Rails Debug",
			"type": "Ruby",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"program": "${workspaceFolder}/bin/rails",
			"args": ["s"],
			"env": {
				"PATH": "${env:HOME}/.rbenv/shims:${env:PATH}",
			},
			"internalConsoleOptions": "neverOpen"
		}
	]
}
